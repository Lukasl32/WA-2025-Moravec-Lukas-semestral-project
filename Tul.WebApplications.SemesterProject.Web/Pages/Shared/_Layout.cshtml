@using Microsoft.AspNetCore.Http
@{
    var _token = Context.Session.GetString("token");
}
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Atheris Collector</title>
    @*<link rel="stylesheet" href="/css/site.css" />*@
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=download" />
</head>
<body class="flex flex-col min-h-screen bg-gray-900 text-white">
    <header class="w-full border-b border-gray-700">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
            <!-- Left section -->
            <div class="flex items-center space-x-6">
                <a href="/" class="flex items-center space-x-2">
                    <span class="material-symbols-outlined">download</span>
                    <span class="font-semibold">Atheris Collector</span>
                </a>
                <div class="h-5 border-l border-gray-600"></div>
                <a href="#" class="text-white font-bold">ASP.NET</a>
                <nav class="hidden md:flex space-x-4 text-sm">
                    <a href="#" class="px-2 py-1 rounded hover:bg-gray-800 transition">Home</a>
                    <a href="#" class="px-2 py-1 rounded hover:bg-gray-800 transition">Features</a>
                    <a href="#" class="px-2 py-1 rounded hover:bg-gray-800 transition">Guide</a>
                    <a href="#" class="px-2 py-1 rounded hover:bg-gray-800 transition">My collections</a>
                </nav>
            </div>

            <!-- Right section -->
            <div class="flex items-center space-x-4 text-sm">
                <a href="/collections/list" class="border border-white px-5 py-1.5 rounded text-xs hover:bg-white hover:text-black transition">COLLECT</a>
                <button class="hover:text-gray-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M17 11a6 6 0 11-12 0 6 6 0 0112 0z" />
                    </svg>
                </button>

                <!-- Avatar + Dropdown -->
                <div class="relative">
                    <button id="avatar-button" class="focus:outline-none">
                        <img src="https://i.pravatar.cc/32" alt="Avatar"
                             class="w-8 h-8 rounded-full border-2 border-gray-600 hover:border-white transition">
                    </button>
                    <div id="avatar-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-white text-black rounded shadow-lg z-50">
                        @if (_token is not null)
                        {
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Profile</a>
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Settings</a>
                        <div class="border-t border-gray-200"></div>
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Log out</a>
                        } else {
                            <a href="/user/login" class="block px-4 py-2 hover:bg-gray-100">Log in</a>
                            <a href="/user/registration" class="block px-4 py-2 hover:bg-gray-100">Sign up</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    @*flex-grow - umožňuje mít patičku připnutou ke spodu stránky když není obsah dost dlouhý*@
    <main class="flex-grow p-4 flex justify-center items-center">
        @RenderBody()
    </main>

    <footer class="bg-gray-800 text-white p-4">
        <p>&copy; 2025 - Atheris</p>
    </footer>

    <script>
        // Přepínání dropdown menu u avatara
        document.getElementById('avatar-button').addEventListener('click', function (e) {
            e.stopPropagation(); // Zabrání zavření hned po otevření
            const dropdown = document.getElementById('avatar-dropdown');
            dropdown.classList.toggle('hidden');
        });

        // Kliknutí mimo zavře dropdown
        document.addEventListener('click', function (e) {
            const dropdown = document.getElementById('avatar-dropdown');
            if (!dropdown.classList.contains('hidden')) {
                dropdown.classList.add('hidden');
            }
        });
    </script>
</body>
</html>